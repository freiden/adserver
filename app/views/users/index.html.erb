<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th colspan="6">Name</th>
      <th colspan="6">Email</th>
      <th colspan="3">Role</th>
      <th colspan="5">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td colspan="6"><%= link_to user.full_name, user %></td>
        <td colspan="6"><%= link_to user.email, user %></td>
        <td colspan="3"><%= link_to user.role.humanize, user %></td>

        <td colspan="5">
          <%= link_to 'Edit', edit_user_path(user) %>
          &nbsp;/&nbsp;
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New user', new_user_path %>
